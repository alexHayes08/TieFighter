
@{
    ViewData["Title"] = "Artwork";
}

<div class="container-fluid">
    <div class="topVSpacer"></div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="row">
                <div class="col">
                    <div class="carousel slide" id="artCarousel" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active"><img src="~/images/tieCockpitModel.png" alt="First slide" /></div>
                            <div class="carousel-item"><img src="~/images/tiePredatorModelAWingsClosedRackMounted.png" alt="First slide" /></div>
                            <div class="carousel-item"><img src="~/images/tiePredatorModelAWingsOpen.png" alt="First slide" /></div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <h1 class="align-left align-baseline" id="artTitle">Artwork</h1>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
    <hr />
    <div id="images" class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h1 class="text-center">Sprints</h1>
            <div class="sprintImageGroup">
                <a href="#">
                    <h3 class="imageGroupTitle">Sprint 2</h3>
                </a>
                <ul class="imageGroup">
                    <li><img src="~/images/tieCockpitModel.png" alt="First slide" /></li>
                    <li><img src="~/images/placeholder.svg" alt="First slide" /></li>
                </ul>
                <hr />
            </div>
            <div class="sprintImageGroup">
                <a href="#">
                    <h3 class="imageGroupTitle">Sprint 1</h3>
                </a>
                <ul class="imageGroup">
                    <li><img src="~/images/placeholder.svg" alt="First slide" /></li>
                    <li><img src="~/images/placeholder.svg" alt="First slide" /></li>
                </ul>
                <hr />
            </div>
            <div class="sprintImageGroup">
                <a href="#">
                    <h3 class="imageGroupTitle">Sprint 0</h3>
                </a>
                <ul class="imageGroup" data-toggle="modal" data-target="#imageViewer">
                    <li><img src="~/images/tiePredatorModelAWingsClosedRackMounted.png" alt="First slide" /></li>
                    <li><img src="~/images/tiePredatorModelAWingsOpen.png" alt="First slide" /></li>
                    <li><img src="~/images/tiefighterModelA.png" alt="First slide" /></li>
                    <li><img src="~/images/neutralizerModel.png" alt="First slide" /></li>
                </ul>
                <hr />
            </div>
        </div>
    </div>
</div>
<div id="imageViewer" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id="imageViewControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/placeholder.svg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/placeholder.svg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/placeholder.svg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#imageViewControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#imageViewControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/artwork.js"></script>
}