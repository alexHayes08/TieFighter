@model TieFighter.Areas.Admin.Models.MedalsViewModels.PaginatedMedalsVM

@{
    ViewData["Title"] = "Medals";
}

<h2>Manage Medals</h2>
<hr />
<div class="row">
    <div class="col">
        <a class="btn btn-primary float-right m-2" asp-area="Admin" asp-controller="Medals" asp-action="Create">Create New</a>
        <button id="deleteSelected" class="btn btn-danger float-right m-2">Delete Selected</button>
    </div>
</div>
<div>
    <div class="topVSpacer"></div>
    <table id="datatable" class="table table-hover" cellspacing="0" autoinit>
        <thead>
            <tr>
                <th>
                    <div class="d-flex flex-column align-items-center justify-content-center h-100">
                        <label class="m-0">
                            <input id="selectAll" type="checkbox" class="custom-checkbox z-depth-1 z-depth-3-hover" />
                        </label>
                    </div>
                </th>
                <th>Image</th>
                <th>Name</th>
                <th>Points Worth</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medal in Model.Medals)
            {
                <tr data-bind="@medal.Id">
                    <td class="align-middle">
                        <div class="d-flex flex-column align-items-center justify-content-center h-100">
                            <label class="m-0">
                                <input id="selectAll" type="checkbox" class="custom-checkbox z-depth-1 z-depth-3-hover" />
                            </label>
                        </div>
                    </td>
                    <td class="align-middle">
                        <img src="/Medals/@medal.FileLocation?@DateTime.Now.Millisecond.ToString()" class="rounded thumbnail maxWidthAndHeight100px z-depth-2" alt="Medal image has not yet been set." />
                    </td>
                    <td class="align-middle">
                        @medal.MedalName
                    </td>
                    <td class="align-middle">
                        @medal.PointsWorth
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Medals" asp-action="Edit" asp-route-id="@medal.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/admin-medals-index.js"></script>
}
