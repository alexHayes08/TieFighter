@model TieFighter.Areas.Admin.Models.MedalsViewModels.PaginatedMedalsVM

@{
    ViewData["Title"] = "Medals";
}

<div class="topVSpacer"></div>
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <h2>Manage Medals</h2>
        <hr />
        <div class="row">
            <div class="col">
                <a class="btn btn-primary float-right" asp-area="Admin" asp-controller="Medals" asp-action="Create">Create New</a>
                <button class="btn btn-danger float-right">Delete Selected</button>
            </div>
        </div>
        <div>
            <div class="topVSpacer"></div>
            <table id="table" class="table table-hover" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <div class="d-flex flex-column align-items-center justify-content-center h-100">
                                <label class="m-0">
                                    <input id="selectAll" type="checkbox" class="custom-checkbox z-depth-1 z-depth-3-hover" />
                                </label>
                            </div>
                        </th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Points Worth</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var medal in Model.Medals)
                    {
                        <tr>
                            <td class="align-middle">
                                <div class="d-flex flex-column align-items-center justify-content-center h-100">
                                    <label class="m-0">
                                        <input type="checkbox" class="custom-checkbox z-depth-1 z-depth-3-hover" />
                                    </label>
                                </div>
                            </td>
                            <td class="align-middle">
                                <img src="/Medals/@medal.FileLocation?@DateTime.Now.Millisecond.ToString()" class="rounded thumbnail maxWidthAndHeight100px" alt="Medal image..."/>
                            </td>
                            <td class="align-middle">
                                @medal.MedalName
                            </td>
                            <td class="align-middle">
                                @medal.PointsWorth
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Medals" asp-action="Edit" asp-route-id="@medal.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-medals-index.js"></script>
}
