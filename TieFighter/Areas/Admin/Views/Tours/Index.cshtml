@model IEnumerable<TieFighter.Models.Tour>

@{
    ViewData["Title"] = "Index";
}

<div class="topVSpacer"></div>
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <h2>Manage Tours</h2>
        <hr />
        <div class="row">
            <div class="col">
                <a class="btn btn-primary float-right m-2" asp-area="Admin" asp-controller="Tours" asp-action="Create">Create New</a>
                <button id="deleteSelected" class="btn btn-danger float-right m-2">Delete Selected</button>
            </div>
        </div>
        <table id="toursTable" class="table" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        <div class="d-flex flex-column align-items-center justify-content-center h-100">
                            <label class="m-0">
                                <input id="selectAll" type="checkbox" class="custom-checkbox z-depth-1 z-depth-3-hover" />
                            </label>
                        </div>
                    </th>
                    <th>Id</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-bind="@item.TourId">
                            <div class="d-flex flex-column align-items-center justify-content-center h-100">
                                <label class="m-0">
                                    <input type="checkbox" class="custom-checkbox z-depth-1 z-depth-3-hover" />
                                </label>
                            </div>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TourId)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TourName)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Tours" asp-action="Edit" asp-route-id="@item.TourId">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-tours-index.js"></script>
}