@model IEnumerable<TieFighter.Models.HomeViewModels.UserGameViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>
<hr />
<div class="row">
    <div class="col">
        <a class="btn btn-primary float-right m-2" asp-area="Admin" asp-controller="Users" asp-action="Create">Create New</a>
        <button id="deleteSelected" class="btn btn-danger float-right m-2">Delete Selected</button>
    </div>
</div>
<table id="datatable" class="table" cellspacing="0" autoinit>
    <thead>
        <tr>
            <th>
                <div class="d-flex flex-column align-items-center justify-content-center h-100">
                    <label class="m-0">
                        <input id="selectAll" type="checkbox" class="custom-checkbox z-depth-1 z-depth-3-hover" />
                    </label>
                </div>
            </th>
            <th>Id</th>
            <th>Image</th>
            <th>Name</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-bind="@item.Uid">
                <td class="align-middle">
                    <div class="d-flex flex-column align-items-center justify-content-center h-100">
                        <label class="m-0">
                            <input type="checkbox" class="custom-checkbox z-depth-1 z-depth-3-hover" />
                        </label>
                    </div>
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Uid)
                </td>
                <td class="align-middle">
                    @*<img alt="No thumbnail set for user" src="@item.Thumbnail?@DateTime.Now.Millisecond.ToString()" class="rounded thumbnail maxWidthAndHeight100px" />*@
                    <img alt="No thumbnail set for user" src="@item.Thumbnail" class="rounded thumbnail maxWidthAndHeight100px z-depth-2" />
                </td>
                <td class="align-middle">
                    @if (string.IsNullOrEmpty(item.DisplayName))
                    {
                        <div>@item.Email</div>
                    }
                    else
                    {
                        <div>@item.DisplayName</div>
                    }
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@item.Uid">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

