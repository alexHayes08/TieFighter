@model TieFighter.Models.GameMode

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex align-items-center">
    <h2 class="flex-grow">Edit</h2>
    <input type="button" id="updateEntity" value="Update" class="btn btn-primary align-middle mx-2" />
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="IsEnabled" /> @Html.DisplayNameFor(model => model.IsEnabled)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GameModeCategoryId" class="control-label"></label>
            <input asp-for="GameModeCategoryId" class="form-control" />
            <span asp-validation-for="GameModeCategoryId" class="text-danger"></span>
        </div>
    </form>
</div>
