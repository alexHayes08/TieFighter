@model IEnumerable<TieFighter.Models.ApplicationUser>

<div class="topVSpacer"></div>
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <h2>User Management</h2>
        <hr />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Search for Users</label>
            <div class="col-sm-10">
                <input id="userSearchBox" class="form-control" type="text" />
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <td colspan="100">
                        <div class="row">
                            <div class="col">
                                <button id="deleteSelectedUsers" class="btn btn-danger float-right">Delete Selected</button>
                                <button id="addNewUser" class="btn btn-default float-right">Add New</button>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th><input id="selectAllUsers" type="checkbox"/></th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ 
                    foreach (ApplicationUser user in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" />
                            </td>
                            <td>
                                @user.Id
                            </td>
                            <td>
                                @user.Email
                            </td>
                            <td>
                                @user.DisplayName
                            </td>
                            <td>
                                <button class="btn btn-link">Edit</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="100">
                        <div class="row">
                            <div class="col">
                                <div class="form-group row sm">
                                    <div class="col-sm">
                                        <input type="number" placeholder="10" value="10"/>
                                    </div>
                                    <label class="col-sm col-form-label">Users per page</label>
                                </div>
                            </div>
                            <div class="col">
                                <nav class="fit-content mx-auto" aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    </ul>
                                </nav>
                            </div>
                            <div class="col">Refresh</div>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>