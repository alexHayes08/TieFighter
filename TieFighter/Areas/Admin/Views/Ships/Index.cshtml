@model IEnumerable<TieFighter.Models.Ship>

@{
    ViewData["Title"] = "Index";
}

<h2>Manage Ships</h2>
<hr />
<div class="row">
    <div class="col">
        <a class="btn btn-primary float-right m-2" asp-area="Admin" asp-controller="Ships" asp-action="Create">Create New</a>
        <button id="deleteSelected" class="btn btn-danger float-right m-2">Delete Selected</button>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="datatable" class="table" autoinit>
    <thead>
        <tr>
            <th>
                <div class="d-flex flex-column align-items-center justify-content-center h-100">
                    <label class="m-0">
                        <input id="selectAll" type="checkbox" class="custom-checkbox z-depth-1 z-depth-3-hover" />
                    </label>
                </div>
            </th>
            <th>Id</th>
            <th>Display Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td data-bind="@item.Id">
                    <div class="d-flex flex-column align-items-center justify-content-center h-100">
                        <label class="m-0">
                            <input type="checkbox" class="custom-checkbox z-depth-1 z-depth-3-hover" />
                        </label>
                    </div>
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Ships" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>