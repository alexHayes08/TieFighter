extends shared/layout.pug

block content
    .row
        .col-md-1
        .col-md-10
            .row
                .col
                    #artCarousel.carousel.slide(data-ride="carousel")
                        .carousel-inner
                            .carousel-item.active
                                img(src="tieCockPitModel.png" alt="First slide")
                            .carousel-item
                                img(src="tiePredatorModelAWingsClosedRackMounted.png" alt="First slide")
                            .carousel-item
                                img(src="tiePredatorModelAWingsOpen.png" alt="First slide")
                .col
                    h1#artTitle.align-left.align-baseline Artwork
        .col-md-1
    .row
        .col-2
        .col-8
            h1.text-center Sprints
            a(href="#")
                h3.imageGroupTitle Sprint 2
            ul.imageGroup
                li
                    a
                        img(src="tieCockPitModel.png" alt="First slide")
                li
                    a
                        img(src="placeholder.svg" alt="First slide")
            hr
            a(href="#")
                h3.imageGroupTitle Sprint 1
            ul.imageGroup
                li
                    a
                        img(src="placeholder.svg" alt="First slide")
                li
                    a
                        img(src="placeholder.svg" alt="First slide")
            hr
            a(href="#")
                h3.imageGroupTitle Sprint 0
            ul.imageGroup
                li
                    a 
                        img(src="tiePredatorModelAWingsClosedRackMounted.png" alt="First slide")
                li
                    a
                        img(src="tiePredatorModelAWingsOpen.png" alt="First slide")
                li
                    a
                        img(src="tieFighterModelA.png" alt="First slide")
                li
                    a
                        img(src="neutralizerModel.png" alt="First slide")

            .modal.fade.bd-example-modal-lg(tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true")
                .modal-dialog.modal-lg
                    .modal-content
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                <img class="d-block w-100" src="placeholder.svg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                <img class="d-block w-100" src="placeholder.svg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                <img class="d-block w-100" src="placeholder.svg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>