doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width  initial-scale=1  shrink-to-fit=no")
    //- meta(name="google-signin-client_id"  content="1086585271464-3a8a8olol47pj29p3jr7kvls7e4mm6ks.apps.googleusercontent.com")
    title= title
    link(rel="icon" type="image/png" href="favicon.png")
    link(href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous")
    link(rel="stylesheet" href="/css/bootstrap.min.css")
    link(rel="stylesheet" href="/css/style.css")
    script(src="https://www.gstatic.com/firebasejs/4.6.0/firebase.js")
    block headerCss
    block headerScripts
  body
    header
      nav(class="navbar fixed-top navbar-expand-md navbar-dark")
        a(class="navbar-brand"  href="#") Tie Fighter - Imperial Remnant
        button(class="navbar-toggler"  type="button"  data-toggle="collapse"  data-target="#navbarSupportedContent"  aria-controls="navbarSupportedContent"  aria-expanded="false"  aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")

        div#navbarSupportedContent.collapse.navbar-collapse
          ul.justify-content-end.w-100.nav.nav-pills
            li.nav-item
              a.nav-link.active(href="#") Home
            li.nav-item
              a#enterGame.nav-link(href="#") Enter the Game
              //- if user
              //-   a#enterGame.nav-link(href="#") Enter the Game
              //- else
              //-   a#enterGame.nav-link(disabled href="#") Enter the Game
            li.nav-item
              a#login.nav-link(href="#") About
            li(class="nav-item")
              a.nav-link(href="#") Artwork
            li.nav-item.dropdown
              if user
                //- a#account.nav-link.dropdown-toggle(data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false") Account
                //- .dropdown-menu
                //-   a.dropdown-item(href="#") Account Info
                //-   a.dropdown-item(href="#") Logout
                //-   a.dropdown-item(href="#") Something else here
                //-   .dropdown-divider
                //-   a.dropdown-item(href="#") Separated link
                a#login.nav-link(href="#") Account
              else
                a#login.nav-link(href="#") Login
    main(class="container")
      block content
    footer
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous")
    script(src="/js/jquery.min.js")
    script(src="/js/bootstrap.min.js")
    script(src="/js/xhr.js")
    script(src="/js/common.js")
    if user
      script(src="/js/account.js")
    else
      script(src="/js/login.js")
    block scripts